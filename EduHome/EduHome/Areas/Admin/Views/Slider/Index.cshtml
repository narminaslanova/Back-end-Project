@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int count = Model.Count();
}

<div class="row">
    <div class="col-lg-12 mb-3">
        @if (count < 5)
        {
            <a asp-action="Create" class="btn btn-success">Create New Slider</a>

        }
        else
        {
            <a asp-action="Create" class="btn btn-success disabled">Create New Slider</a>

        }
    </div>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (count == 1)
                            {
                                foreach (Slider slide in Model)
                                {

                                    <tr>
                                        <td>
                                            <img src="~/img/@slide.ImageURL" style="width:100px;height:100px;object-fit: cover;" alt="Alternate Text" />
                                        </td>
                                        <td>
                                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@slide.Id">Detail</a>
                                            <a class="btn btn-info" asp-action="Update" asp-route-id="@slide.Id">Update</a>
                                            <a class="btn btn-danger disabled" asp-action="Delete" asp-route-id="@slide.Id">Delete</a>
                                        </td>
                                    </tr>


                                }
                            }
                            else
                            {
                                foreach (Slider slide in Model)
                                {
                                    if (slide.IsDeleted == false)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/img/slider/@slide.ImageURL" style="width:100px;height:100px;object-fit: cover;" alt="Alternate Text" />
                                            </td>
                                            <td>
                                                <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@slide.Id"><i class="mdi mdi-information-outline"></i></a>
                                                <a class="btn btn-info" asp-action="Update" asp-route-id="@slide.Id"><i class="mdi mdi-pencil"></i></a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slide.Id"><i class="mdi mdi-delete"></i></a>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/img/slider/@slide.ImageURL" style="width:100px;height:100px;object-fit: cover;" alt="Alternate Text" />
                                            </td>
                                            <td>
                                                <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@slide.Id"><i class="mdi mdi-information-outline"></i></a>
                                                <a class="btn btn-info" asp-action="Update" asp-route-id="@slide.Id"><i class="mdi mdi-pencil"></i></a>
                                                <a class="btn btn-success" asp-action="Delete" asp-route-id="@slide.Id"><i class="mdi mdi-reload"></i></a>
                                            </td>
                                        </tr>
                                    }

                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

