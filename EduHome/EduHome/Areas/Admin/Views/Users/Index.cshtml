@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    IsDeleted
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                                <tr>
                                    <td>
                                        @user.Fullname
                                    </td>
                                    <td>
                                        @user.Username
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        @user.Role
                                    </td>
                                    @if (user.IsDeleted)
                                    {
                                        <td class="text-danger">
                                            Deactivated
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-success">
                                            Active
                                        </td>
                                    }
                                    @if (user.Username != User.Identity.Name)
                                    {
                                        <td>
                                            <a class="btn btn-secondary" asp-action="ChangeRole" asp-route-id="@user.Id">
                                                Change role
                                            </a>
                                            @if (user.IsDeleted)
                                            {
                                                <a class="btn btn-success" asp-action="Activate" asp-route-id="@user.Id">
                                                    Activate
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-danger" asp-action="Activate" asp-route-id="@user.Id">
                                                    Deactivate
                                                </a>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <nav aria-label="...">
        <ul class="pagination pagination-sm">
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                if (i == ViewBag.Page)
                {
                    <li class="page-item active" aria-current="page">
                        <span class="page-link" href="#">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-area="Admin" asp-controller="Users" asp-action="Index" asp-route-page="@i">@i</a></li>
                }

            }
        </ul>
    </nav>
</div>
