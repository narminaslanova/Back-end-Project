@model Blog
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-12">
        <div>
            <img src="~/img/blog/@Model.ImageURL" width="300" alt="Alternate Text" />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.Raw(Model.BlogDetails.Description)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a asp-action="Index" class="my-3 btn btn-secondary">Go Back</a>
    </div>
</div>

